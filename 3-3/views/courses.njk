{% extends "layout.njk" %}

{% block head %}
  <title>Posts - Plataforma</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
{% endblock %}

{% block content %}
  <div id="wrapper">
    <h1 class="title">Posts</h1>
  </div>

  <div class="cards">

    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card__image-container">
          <img src="https://blog.rocketseat.com.br/content/images/2018/12/{{item.id}}.png"/>
        </div>
        <div class="card__content">
          <p class="card__title">{{item.title}}</p>
        </div>
        <div class="card__info">
          <p class="card__autor">{{item.author}}</p>
          <p class="card__hour">{{item.hour}}</p>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>

      <a class="maximize-modal">
        <i class="material-icons">maximize</i>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="./script.js"></script>
{% endblock %}